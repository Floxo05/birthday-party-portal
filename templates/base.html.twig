<!DOCTYPE html>
<html lang="de" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

<!-- Navbar -->
{% if is_granted('ROLE_USER') %}
    {% block nav_wrapper %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            {% block nav %}
                <div class="container">
                    <a class="navbar-brand" href="{{ path('app_home') }}">Party Portal</a>
                    {% block navigation %}
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            {% block nav_items %}
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Home</a></li>
                                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Abmelden</a></li>
                                    <li class="nav-item"><a class="nav-link" href="{{ path('user_change_password') }}">Passwort ändern</a></li>
                                    {% if is_granted('ROLE_ORGANIZER') %}
                                        <li class="nav-item"><a class="nav-link" href="{{ path('admin') }}">Admin-Bereich</a></li>
                                    {% endif %}
                                </ul>
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </nav>
    {% endblock %}
{% endif %}

<!-- Flash-Messages -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show mt-3 mx-3" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Schließen"></button>
        </div>
    {% endfor %}
{% endfor %}

<!-- Hauptinhalt -->
<div class="container mt-4 flex-grow-1">
    {% block body %}{% endblock %}
</div>

<!-- Sticky-Footer -->
<footer class="bg-dark text-light text-center py-3 mt-auto small">
    <div class="container">
        Dies ist ein privates Freizeitprojekt.
        <a href="{{ path('app_impressum') }}" class="link-light text-decoration-underline">Impressum</a> ·
        <a href="{{ path('app_privacy') }}" class="link-light text-decoration-underline">Datenschutz</a>
    </div>
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
