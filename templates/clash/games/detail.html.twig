{% extends 'base.html.twig' %}

{% block title %}Clash â€“ {{ game.title }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center gap-2 mb-2">
            <h1 class="mb-0">{{ game.title }}</h1>
            <span class="fs-3" aria-hidden="true">{{ game.icon ?? 'ðŸŽ®' }}</span>
        </div>
        <p class="text-muted">{{ game.description }}</p>

        {% set tn = {'A':'Flo','B':'Malte'} %}
        {% set colorByTeam = {'A':'danger','B':'primary'} %}

        {% if active %}
            <div class="alert alert-success py-2 mb-2">Dieses Spiel ist <strong>aktiv</strong>. Deine Ergebnisse werden
                gewertet.
            </div>
        {% else %}
            <div class="alert alert-secondary py-2 mb-2">Dieses Spiel ist derzeit <strong>nicht aktiv</strong> oder
                bereits
                beendet.
            </div>
        {% endif %}

        <div class="small text-muted mb-3">
            {% if game.startAt is defined and game.startAt and game.endAt is defined and game.endAt %}
                VerfÃ¼gbar von {{ game.startAt|date('d.m.Y H:i') }} bis {{ game.endAt|date('d.m.Y H:i') }}
                {% set nowTs = "now"|date('U') %}
                {% set secs = game.endAt|date('U') - nowTs %}
                {% if active and secs > 0 %}
                    {% set days = (secs // 86400)|round(0, 'floor') %}
                    {% set hrs = ((secs % 86400) // 3600)|round(0, 'floor') %}
                    {% set mins = ((secs % 3600) // 60)|round(0, 'floor') %}
                    <span class="ms-1">(noch
                        {% if days > 0 %}{{ days }} T{% endif %}
                        {% if hrs > 0 %}{{ days > 0 ? ' ' : '' }}{{ hrs }} Std{% endif %}
                        {% if mins > 0 and days == 0 %}{{ (hrs > 0 ? ' ' : '') ~ mins }} Min{% endif %}
                        )</span>
                {% elseif not active and game.startAt > ("now"|date_modify('now')) %}
                    {# upcoming: show starts in #}
                    {% set secs2 = game.startAt|date('U') - nowTs %}
                    {% if secs2 > 0 %}
                        {% set d2 = (secs2 // 86400)|round(0, 'floor') %}
                        {% set h2 = ((secs2 % 86400) // 3600)|round(0, 'floor') %}
                        {% set m2 = ((secs2 % 3600) // 60)|round(0, 'floor') %}
                        <span class="ms-1">(beginnt in
                            {% if d2 > 0 %}{{ d2 }} T{% endif %}
                            {% if h2 > 0 %}{{ d2 > 0 ? ' ' : '' }}{{ h2 }} Std{% endif %}
                            {% if m2 > 0 and d2 == 0 %}{{ (h2 > 0 ? ' ' : '') ~ m2 }} Min{% endif %}
                            )</span>
                    {% endif %}
                {% endif %}
            {% elseif game.startAt is defined and game.startAt %}
                VerfÃ¼gbar ab {{ game.startAt|date('d.m.Y H:i') }}
            {% elseif game.endAt is defined and game.endAt %}
                VerfÃ¼gbar bis {{ game.endAt|date('d.m.Y H:i') }}
            {% endif %}
        </div>

        <div class="mb-3">
            <h5>Bestenliste</h5>
            {% if leaderboard is empty %}
                <div class="text-muted">Noch keine Ergebnisse.</div>
            {% else %}
                <ol class="list-group list-group-numbered">
                    {% for row in leaderboard %}
                        {% set member = row.member %}
                        {% set score = row.score %}
                        {% set t = member.clashTeam ?? 'A' %}
                        {% set c = colorByTeam[t] %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>
                <span class="badge bg-{{ c }} me-2">Team {{ tn[t] ?? t }}</span>
                {{ member.user.name ?? member.user.username }}
              </span>
                            <span class="fw-bold">{{ score }}</span>
                        </li>
                    {% endfor %}
                </ol>
            {% endif %}
        </div>

        <div class="row g-3 align-items-start">
            <div class="col-12 col-lg-7">
                {% if game.image is defined and game.image %}
                    <img src="{{ asset(game.image) }}" alt="{{ game.title }}" class="img-fluid rounded border mb-2"
                         style="max-height: 320px; object-fit: cover; width: 100%;"/>
                {% endif %}
                <div class="d-grid gap-2">
                    {% if active %}
                        <a class="btn btn-primary" id="startGameBtn" href="{{ playUrl }}">Spiel starten</a>
                        <small class="text-muted d-block mt-2">Tippe auf den Button, um das Spiel zu starten.</small>
                    {% else %}
                        <button class="btn btn-secondary" type="button" disabled>Nicht aktiv</button>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="mt-4 d-grid gap-2 d-md-block">
            <a href="{{ path('party_clash_games', { id: party.id }) }}" class="btn btn-outline-secondary">ZurÃ¼ck zu den
                Spielen</a>
            <a href="{{ path('party_clash_start', { id: party.id }) }}" class="btn btn-outline-secondary">ZurÃ¼ck zum
                Clash</a>
        </div>
    </div>
{% endblock %}
