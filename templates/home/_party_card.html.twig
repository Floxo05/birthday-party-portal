{% set party = membership.party %}
{% set isPast = party.partyDate < "now"|date('Y-m-d H:i:s') %}

<div class="col-12">
    <div class="card shadow-sm {% if isPast %}text-muted opacity-75{% endif %}">
        <div class="card-body">
            <h5 class="card-title">
                <a href="{{ path('party_show', {id: party.id}) }}"
                   class="stretched-link text-decoration-none text-dark">
                    {{ party.title }}
                </a>
            </h5>
            <p class="card-text">
                📅 {{ party.partyDate|date('d.m.Y') }}
                <br>
                {% if membership.role == 'Host' %}
                    🏠 {{ membership.role|translateRole }}
                {% else %}
                    🎉 {{ membership.role|translateRole }}
                {% endif %}
            </p>
            <a href="{{ path('party_show', {id: party.id}) }}" class="btn btn-outline-primary btn-sm">Details
                ansehen</a>
        </div>
    </div>
</div>
